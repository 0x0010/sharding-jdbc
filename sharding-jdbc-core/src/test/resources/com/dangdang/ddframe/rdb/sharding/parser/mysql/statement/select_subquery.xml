<asserts>
    <assert id="assertSelectWithInnerSQL" sql="SELECT COUNT(0) FROM (SELECT o.status FROM order o WHERE o.order_id = 1 ORDER BY o.order_id DESC)" expected-sql="SELECT COUNT(0) FROM (SELECT [Token(o)].status FROM [Token(order)] o WHERE o.order_id = 1 ORDER BY o.order_id DESC )">
        <tables>
            <table name="order" alias="o" />
        </tables>
        <condition-contexts>
            <condition-context>
                <condition column-name="order_id" table-name="order" operator="EQUAL">
                    <value value="1" type="java.lang.Integer" />
                </condition>
            </condition-context>
        </condition-contexts>
        <aggregation-columns>
            <aggregation-column expression="COUNT(0)" aggregation-type="COUNT" index="1" />
        </aggregation-columns>
    </assert>
    
</asserts>
